// Prisma schema for NextAuth with PostgreSQL
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?
  refresh_token_expires_in Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts Account[]
  sessions Session[]
  invoices Invoice[]
  invoiceSequences InvoiceSequence[]

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
}

enum PartyRole {
  ORIGIN
  CUSTOMER
}

model Invoice {
  id            String        @id @default(cuid())
  invoiceNumber String
  sequenceId    String
  sequenceValue Int           @default(1)
  status        InvoiceStatus @default(DRAFT)
  currencyCode  String        @default("USD")
  issueDate     DateTime?
  dueDate       DateTime?
  notes         String?
  terms         String?
  subtotal      Decimal       @db.Decimal(18, 2) @default(0)
  tax           Decimal       @db.Decimal(18, 2) @default(0)
  taxRate       Decimal       @db.Decimal(8, 4) @default(0)
  discount      Decimal       @db.Decimal(18, 2) @default(0)
  total         Decimal       @db.Decimal(18, 2) @default(0)
  userId        String

  parties       InvoiceParty[]
  items         InvoiceItem[]
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  sequence      InvoiceSequence @relation(fields: [sequenceId], references: [id], onDelete: Restrict)

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@unique([userId, invoiceNumber])
  @@index([sequenceId, sequenceValue])
}

model InvoiceParty {
  id        String    @id @default(cuid())
  invoiceId String
  role      PartyRole
  name      String?
  company   String?
  email     String?
  phone     String?
  address   String?
  website   String?

  invoice   Invoice   @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([invoiceId, role])
}

model InvoiceItem {
  id          String   @id @default(cuid())
  invoiceId   String
  name        String
  description String?
  quantity    Int
  rate        Decimal @db.Decimal(18, 2)
  amount      Decimal @db.Decimal(18, 2)
  notes       String?
  position    Int      @default(0)

  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model InvoiceSequence {
  id         String   @id @default(cuid())
  userId     String
  prefix     String   @default("INV")
  padLength  Int      @default(5)
  lastNumber Int      @default(0)

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  invoices Invoice[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, prefix])
}
